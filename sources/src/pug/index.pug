                                    img(src="./images/intro-1.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-2.png" alt="")

                .intro__block
                    .intro__frame
                        .intro__slider.swiper#intro-slider-center(data-name="intro_slider_center")
