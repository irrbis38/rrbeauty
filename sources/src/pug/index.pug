extends base/_layout
block head
    title RR Beauty - Главная страница
block page

    include ./blocks/_panel

    .intro
        .intro__container 
            .intro__wrapper

                .intro__block
                    .intro__frame
                        .intro__slider.swiper#intro-slider-left(data-name="intro_slider_left")
                            ul.swiper-wrapper
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-3.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-1.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-2.png" alt="")

                .intro__block
                    .intro__frame
                        .intro__slider.swiper#intro-slider-center(data-name="intro_slider_center")
                            ul.swiper-wrapper
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-1.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-2.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-3.png" alt="")

                .intro__block
                    .intro__frame
                        .intro__slider.swiper#intro-slider-right(data-name="intro_slider_right")
                            ul.swiper-wrapper
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-2.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-3.png" alt="")
                                li.intro__slide.swiper-slide
                                    img(src="./images/intro-1.png" alt="")

            .intro__nav

                button.intro__btn.intro__prev(type="button" aria-label="")
                    svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none")
                        path(d="M20.0002 11.0001V13.0001H8.00016L13.5002 18.5001L12.0802 19.9201L4.16016 12.0001L12.0802 4.08008L13.5002 5.50008L8.00016 11.0001H20.0002Z" fill="#000")

                button.intro__btn.intro__next(type="button" aria-label="")
                    svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none")
                        path(d="M3.99984 11.0001V13.0001H15.9998L10.4998 18.5001L11.9198 19.9201L19.8398 12.0001L11.9198 4.08008L10.4998 5.50008L15.9998 11.0001H3.99984Z" fill="#000")


            .intro__pagination.swiper-pagination
                button.intro__paginationItem(type="button" aria-label="Пагинация слайдера")
                button.intro__paginationItem(type="button" aria-label="Пагинация слайдера")
                button.intro__paginationItem(type="button" aria-label="Пагинация слайдера")


    section.popularCategories
        .container 
            h2.popularCategories__title Популярные категории

            ul.popularCategories__list 

                - const numbersOfItems = [1, 2, 3, 4, 5, 6, 7, 8]

                each number in numbersOfItems 
                    +popularCategoriesItem(number)

    section.brandsSection
        .brandsSection__autoscroll.autoscroll__block.splide(aria-label="Заголовок бегущей строкой")
            .splide__track
                ul.splide__list
                    li.splide__slide: h2.brandsSection__title.autoscroll__title бренды
                    li.splide__slide: h2.brandsSection__title.autoscroll__title бренды
                    li.splide__slide: h2.brandsSection__title.autoscroll__title бренды

        .container 
            ul.brandsSection__list 
                li.brandsSection__item
                    a(href="#") 



