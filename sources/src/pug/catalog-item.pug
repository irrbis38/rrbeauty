extends base/_layout
block vars
    - var bodyClass = 'catalog-item';
block head
    title RR Beauty - Карточка товара
block page

    .top
        .container
            ul.top__breadcrumps
                li: a(href="#") Главная
                li: a(href="#") Каталог
                li: span Средства ухода

    section.item
        .container.item__container

            .item__view.view

                .view__wrapper

                    .view__small.swiper
                        .swiper-wrapper
                            .view__small-item.swiper-slide
                                img(src="./images/view-small-1.png" alt="Фото товара")
                            .view__small-item.swiper-slide
                                img(src="./images/view-small-2.png" alt="Фото товара")
                            .view__small-item.swiper-slide
                                img(src="./images/view-small-2.png" alt="Фото товара")

                    .view__full.swiper
                        .swiper-wrapper
                            .view__full-item.swiper-slide
                                img(src="./images/view-full-1.png" alt="Фото товара")
                            .view__full-item.swiper-slide
                                img(src="./images/goods-card-5.png" alt="Фото товара")
                            .view__full-item.swiper-slide
                                img(src="./images/goods-card-5.png" alt="Фото товара")

            .item__details.details

                .details__top
                    .details__marks

                        span.details__sticker.sticker__sale.sticker__red Хит
                        .details__brand
                            img(src="./images/givenchy-logo.svg" alt="Givenchy")
                    h2.details__title INTENZE Products Lemon Yellow 2 oz

                span.details__decor

                .details__feature.details__feature-weight
                    .details__name
                        span Вес / 
                        span.details__current 12 гр
                    .details__values
                        button.details__set-value.selected(type="button" aria-label="Выбрать вес") 12
                        button.details__set-value(type="button" aria-label="Выбрать вес") 20
                        button.details__set-value(type="button" aria-label="Выбрать вес") 25
                        button.details__set-value(type="button" aria-label="Выбрать вес") 32

                -
                    const colors = [
                        {value: 'F4ECEC', colorName: 'Whisper', isSelected: true},
                        {value: 'D87779', colorName: 'Froly', isSelected: false},
                        {value: 'E84851', colorName: 'Mandy', isSelected: false},
                        {value: 'E99E82', colorName: 'Tonys Pink', isSelected: false},
                        {value: 'DB828E', colorName: 'Carissma', isSelected: false},
                        {value: 'E18682', colorName: 'Sea Pink', isSelected: false},
                        {value: 'F7D1D0', colorName: 'Cosmos', isSelected: false},
                        {value: 'D69B82', colorName: 'Tumbleweed', isSelected: false},
                        {value: 'E9ABAE', colorName: 'Pale Chestnut', isSelected: false},
                        {value: 'E99E82', colorName: 'Tonys Pink', isSelected: false},
                        {value: 'DB828E', colorName: 'Carissma', isSelected: false},
                        {value: 'E18682', colorName: 'Sea Pink', isSelected: false},
                        {value: 'F7D1D0', colorName: 'Cosmos', isSelected: false},
                        {value: 'D69B82', colorName: 'Tumbleweed', isSelected: false},
                        {value: 'E9ABAE', colorName: 'Pale Chestnut', isSelected: false},
                        {value: 'D87779', colorName: 'Flory', isSelected: false},
                        {value: 'E84851', colorName: 'Mandy', isSelected: false},
                        {value: 'E9ABAE', colorName: 'Pale Chestnut', isSelected: false},
