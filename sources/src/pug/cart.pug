extends base/_layout
block vars
    - var bodyClass = 'cart-page';
block head
    title RR Beauty - Корзина
block page

    .top
        .container
            include ./blocks/_breadcrupms

    section.cart

        h2.top__title.top__title--large: span.container Корзина

        .container.cart__container

            .cart__checkout

                .cart__promocode-wrapper.correct
                    input.cart__promocode(type="text" placeholder="Есть промокод" autocomplete="off")

                .cart__checkout-inner 
                    .cart__total
                        span Итого:
                        span.cart__total-price 25 800₸
                    button.cart__order.btn__black(type="button" aria-label="Оформить заказ товаров") Оформить заказ
                    button.cart__reset.btn__white(type="button" aria-label="Удалить всё из корзины") Удалить всё


            .cart__info
                .cart__title-row
                    h3.cart__column-name Наименование
                    h3.cart__column-name Цена
                    h3.cart__column-name Количество
                    h3.cart__column-name Сумма
                    .cart__empty

                .cart__list

                    +cartRegularRow(1)

                    +cartRegularRow(2)

                    +cartRegularRow(1)


