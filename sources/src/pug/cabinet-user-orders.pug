extends base/_layout
block vars
    - var bodyClass = 'cabinet-user-orders-page';
block head
    title RR Beauty - Личный кабинет (заказы)
block page

    section.top

        .container

            ul.top__breadcrumps
                li: a(href="#") Главная
                li: a(href="#") Каталог
                li: span Средства ухода

            h2.top__title.top__title--large кабинет

    .cabinet 
        .container.cabinet__container

            ul.cabinet__menu

                li.cabinet__menu-item: a.cabinet__menu-link.active(href="./cabinet-user-orders.html")
                    span Заказы
                    include ./blocks/_icon-cart

                li.cabinet__menu-item: a.cabinet__menu-link(href="./cabinet-personal-data.html")
                    span Личные данные
                    include ./blocks/_icon-settings

                li.cabinet__menu-item: a.cabinet__menu-link(href="./cabinet-favorites.html")
                    span Избранное
                    include ./blocks/_icon-favorites

                li.cabinet__menu-item: button.cabinet__menu-link(type="button" aria-label="Выйти из учётной записи")
                    span Выход
                    include ./blocks/_icon-exit

            .cabinet__content


                .cabinet__nav
                    .cabinet__empty
                    .cabinet__nav-wrapper.hidescrollbar
                        ul.cabinet__nav-list.hidescrollbar
                            li: button.cabinet__nav-btn.active(type="button" data-order="all" aria-label="Показать все заказы") Все
                            li: button.cabinet__nav-btn(type="button" aria-label="Показать текущие заказы" data-order="current") Текущие
                            li: button.cabinet__nav-btn(type="button" aria-label="Показать выполненные заказы" data-order="completed") Выполненные
                            li: button.cabinet__nav-btn(type="button" aria-label="Показать отменённые заказы" data-order="canceled") Отмененные

